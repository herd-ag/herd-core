# Herd MCP Server Environment Configuration
# Copy this file to .env and fill in your values.
# .env is gitignored and never committed.

# === Required ===
HERD_SLACK_TOKEN=        # Slack bot token (xoxb-...)
LINEAR_API_KEY=          # Linear API key (lin_api_...)

# === Agent Config ===
HERD_AGENT_NAME=         # Agent identity (steve, mason, fresco, etc.)
HERD_DB_PATH=.herd/herddb.duckdb

# === Optional ===
HERD_SLACK_WEBHOOK=      # Slack webhook URL for notifications
SLACK_APP_TOKEN=         # Slack app token for socket mode (xapp-...)
SSL_CERT_FILE=           # Path to CA cert bundle (macOS-specific)
